
@model HomeIndexViewModel
<div class="container-fluid" style="margin-top:100px">
    <div class="container d-flex justify-content-center">
        <div class="col-md-7 bg-white py-4 mx-4" style="border-radius: 40px;">
            <div class="flex-grow d-flex justify-content-center">
                <div>
                    <a asp-controller="Home" asp-action="TopTattoos"> <h1>Top Rated Tattoos</h1></a>
                </div>
            </div>
            <div class="border mx-2"></div>
            <div class="d-flex  align-items-center col-sm-12 px-2 pt-2" style="margin-bottom:10px; border-radius:10px">

                <div id="tattooContainer" class="row">
                    <partial name="_ListedTattoosContainer" model="Model.ListedTattooViewModels" />
                </div>
            </div>
        </div>

        <div class="col-md-7 bg-white py-4" style="border-radius: 40px;">
            <div class="flex-grow d-flex justify-content-center">
                <div>
                    <a asp-controller="Home" asp-action="TopProfiles"> <h1>Top Rated Profiles</h1></a>
                </div>
            </div>
            <div class="border mx-2"></div>
            <div class="d-flex flex-wrap justify-content-center col-sm-12 offset-sm-0 px-2 pt-2" style="margin-bottom:10px; border-radius:10px">
                <div id="tattooContainer" class="col">
                    @foreach (var item in Model.ProfileViewModels)
                    {
                        <partial name="_ListedProfilePartial" model="item" />
                    }
                </div>
            </div>

        </div>
    </div>
</div>
