@model List<ListedTattooViewModel>
@{
    int skipIndex = 0;
    int takeIndex = Model.Count / 3;

}

<div>
    @for (int i = 0; i < Model.Count / 3; i++)
    {
        <div class="d-flex flex-row " style="margin-bottom:10px">
            @foreach (var item in Model.Skip(skipIndex).Take(3))
            {
                <div class="p-md-2">
                    <img class="border border-3 flex-shrink-0" src="@item.PictureUri" width="100%">
                </div>
            }
        </div>
        skipIndex += 3;
    }
    @if (Model.Count < 3)
    {
        <div class="d-flex flex-row " style="margin-bottom:10px">
            @foreach (var item in Model)
            {
                <div class="p-md-2">
                    <img class="border border-3 flex-shrink-0" src="@item.PictureUri" width="100%">
                </div>
            }
        </div>
    }

</div>


