@model IndexTattooViewModel
<div class="container p-3">
    <div class="row m-5 justify-content-center">
        <div class="col-sm-7 bg-white p-4 justify-content-start" style="border-radius:10px">
            <section>
                <div class="p-md-2" style="width:100%">
                    <img class="border border-3 img-fluid" src="@Model.PictureUri" width="100%">
                </div>
                <div class="d-flex align-items-stretch col-sm-12 offset-sm-0 " style="margin-bottom:10px">
                    @foreach (var style in Model.StylesViewModels)
                    {
                        <a class="btn btn-secondary mx-2" href="/Style/Index/@style.Id">@style.Name</a>
                    }
                </div>
                <div class="d-flex align-items-stretch col-sm-12 offset-sm-0 " style="margin-bottom:10px">
                    <div class="ml-3 mr-2 my-2" style="width:10%">
                        <a href="/Profile/Index/@Model.ProfileViewModel.Id">
                            <img class="img-fluid" style="border-radius:10px" src="@Model.ProfileViewModel.ProfilePictureUri" />
                        </a>
                    </div>
                    <div class="my-2">
                        <a href="/Profile/Index/@Model.ProfileViewModel.Id"><h5>@Model.ProfileViewModel.ProfileName</h5></a>
                    </div>
                </div>
                <div class="mx-4 my-2">
                    <h5>  @Model.Description</h5>
                </div>
            </section>
        </div>

    </div>
</div>