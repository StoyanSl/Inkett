@model AlbumIndexViewModel
<div class="container" style="padding-right:135px">
    <partial name="_ProfilePartial" model="Model.ProfileViewModel" />
    <div class="container" style="margin-top:30px; padding:0">
        <div class="row">
            <div class="col-md-12 bg-white" style="border-radius: 40px;">
                <div class="d-flex align-items-stretch col-sm-12 offset-sm-0 " style="margin-bottom:10px">
                    <h1>@Model.Title</h1>
                    @if (Model.isOwner)
                    {
                        <div class="mx-3 my-2">
                            <a class="btn btn-secondary btn-brand" href="/Album/Edit/@Model.Id">Edit</a>
                        </div>  
                        <div class="mx-1 my-2">
                            <a class="btn btn-danger" href="/Album/Delete/@Model.Id">Delete</a>
                        </div>
                    }
                </div>
                <partial name="_ListedTattoosContainer" model="Model.Tattoos" />
            </div>
        </div>
    </div>
</div>