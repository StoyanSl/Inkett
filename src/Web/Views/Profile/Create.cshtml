@model ProfileViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <section>
                <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <h4>Create Profile</h4>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ProfileName" class="control-label form-label"></label>
                        <input asp-for="ProfileName" value="@Model.ProfileName" class="form-control form-input form-input-center" />
                        <span asp-validation-for="ProfileName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfileDescription" class="control-label form-label"></label>
                        <input asp-for="ProfileDescription" value="@Model.ProfileDescription" class="form-control form-input form-input-center" />
                        <span asp-validation-for="ProfileDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default btn-brand btn-brand-big">&nbsp;REGISTER&nbsp;</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>